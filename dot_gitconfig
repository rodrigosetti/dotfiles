[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = green
  changed   = red
  untracked = cyan

[user]
    name  = Thiago Genez
    email = thiagogenez@gmail.com

[gc]
    auto = 1

[alias]
    status = !git branch && git status
    plog   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    grep   = grep -n --color=always -E
    last24 = log --author=rsetti --since=yesterday --pretty=oneline --abbrev-commit

[merge]
    tool = opendiff

[apply]
    whitespace = nowarn

[diff]
    algorithm = patience
[push]
    default = matching
[branch]
    autosetuprebase = always

